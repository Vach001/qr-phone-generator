<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QR Phone Generator | Professional Tool</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #3498db;
            --secondary: #2C3E50;
            --success: #27ae60;
            --danger: #e74c3c;
            --light: #ecf0f1;
            --dark: #2C3E50;
            --shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
            line-height: 1.6;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .header {
            text-align: center;
            margin-bottom: 40px;
            color: white;
        }
        
        .header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
            font-weight: 300;
        }
        
        .header p {
            font-size: 1.2em;
            opacity: 0.9;
        }
        
        .app-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 40px;
        }
        
        @media (max-width: 768px) {
            .app-container {
                grid-template-columns: 1fr;
            }
        }
        
        .card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: var(--shadow);
            transition: transform 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: var(--dark);
        }
        
        .input-group {
            display: flex;
            gap: 10px;
        }
        
        .country-select {
            flex: 0 0 120px;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 8px;
            background: white;
            font-size: 14px;
        }
        
        .phone-input {
            flex: 1;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s;
        }
        
        .phone-input:focus {
            outline: none;
            border-color: var(--primary);
        }
        
        .btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, var(--primary), #2980b9);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }
        
        .btn-secondary {
            background: linear-gradient(135deg, #95a5a6, #7f8c8d);
        }
        
        .qr-result {
            text-align: center;
        }
        
        .qr-image {
            max-width: 100%;
            height: auto;
            border: 1px solid #ddd;
            border-radius: 10px;
            margin: 20px 0;
        }
        
        .phone-display {
            font-size: 1.4em;
            font-weight: 600;
            color: var(--dark);
            margin: 15px 0;
            word-break: break-all;
        }
        
        .action-buttons {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        
        .action-buttons .btn {
            flex: 1;
        }
        
        .error {
            background: #ffeaea;
            color: var(--danger);
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid var(--danger);
        }
        
        .success {
            background: #e8f6ef;
            color: var(--success);
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid var(--success);
        }
        
        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 40px;
        }
        
        .feature {
            background: white;
            padding: 25px;
            border-radius: 10px;
            text-align: center;
            box-shadow: var(--shadow);
        }
        
        .feature i {
            font-size: 2.5em;
            color: var(--primary);
            margin-bottom: 15px;
        }
        
        .feature h3 {
            margin-bottom: 10px;
            color: var(--dark);
        }
        
        .footer {
            text-align: center;
            color: white;
            margin-top: 50px;
            opacity: 0.8;
        }
        
        .loading {
            display: none;
            text-align: center;
            padding: 20px;
        }
        
        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid var(--primary);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-qrcode"></i> QR Phone Generator</h1>
            <p>Create professional QR codes for international phone numbers</p>
        </div>
        
        <div class="app-container">
            <!-- Generator Form -->
            <div class="card">
                <h2><i class="fas fa-mobile-alt"></i> Generate QR Code</h2>
                
                <% if (error) { %>
                    <div class="error">
                        <i class="fas fa-exclamation-triangle"></i> <%= error %>
                    </div>
                <% } %>
                
                <form id="qrForm" action="/generate" method="POST">
                    <div class="form-group">
                        <label for="countryCode"><i class="fas fa-globe"></i> Country Code</label>
                        <select class="country-select" id="countryCode" name="countryCode" required>
                            <% countryCodes.forEach(country => { %>
                                <option value="<%= country.code %>" 
                                    <%= selectedCountry === country.code ? 'selected' : '' %>>
                                    <%= country.flag %> +<%= country.code %> (<%= country.name %>)
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="phoneNumber"><i class="fas fa-phone"></i> Phone Number</label>
                        <div class="input-group">
                            <span class="phone-prefix" id="phonePrefix">+<%= selectedCountry %></span>
                            <input type="text" class="phone-input" id="phoneNumber" name="phoneNumber" 
                                   value="<%= phoneNumber.replace('+' + selectedCountry, '') %>"
                                   placeholder="Enter phone number" required>
                        </div>
                        <small style="color: #666; margin-top: 5px; display: block;">
                            Example: 10123456 for Armenia (+374)
                        </small>
                    </div>
                    
                    <button type="submit" class="btn" id="generateBtn">
                        <i class="fas fa-bolt"></i> Generate QR Code
                    </button>
                </form>
                
                <div class="loading" id="loading">
                    <div class="spinner"></div>
                    <p>Generating QR Code...</p>
                </div>
            </div>
            
            <!-- QR Result -->
            <div class="card qr-result">
                <h2><i class="fas fa-qrcode"></i> Your QR Code</h2>
                
                <% if (qrCode) { %>
                    <div class="success">
                        <i class="fas fa-check-circle"></i> QR Code generated successfully!
                    </div>
                    
                    <div class="phone-display" id="displayNumber">
                        <i class="fas fa-phone"></i> <%= phoneNumber %>
                    </div>
                    
                    <img src="<%= qrCode %>" alt="QR Code" class="qr-image" id="qrImage">
                    
                    <div class="action-buttons">
                        <a href="<%= qrCode %>" download="phone-qr-<%= phoneNumber.replace('+', '') %>.png" 
                           class="btn">
                            <i class="fas fa-download"></i> Download PNG
                        </a>
                        <button class="btn btn-secondary" onclick="shareQRCode()">
                            <i class="fas fa-share"></i> Share
                        </button>
                    </div>
                <% } else { %>
                    <div style="text-align: center; padding: 40px; color: #666;">
                        <i class="fas fa-qrcode" style="font-size: 4em; margin-bottom: 20px; opacity: 0.3;"></i>
                        <p>Your QR code will appear here</p>
                    </div>
                <% } %>
            </div>
        </div>
        
        <!-- Features -->
        <div class="features">
            <div class="feature">
                <i class="fas fa-globe-americas"></i>
                <h3>International Support</h3>
                <p>Supports phone numbers from all countries with proper formatting</p>
            </div>
            <div class="feature">
                <i class="fas fa-bolt"></i>
                <h3>Instant Generation</h3>
                <p>Create QR codes in seconds with high-quality output</p>
            </div>
            <div class="feature">
                <i class="fas fa-mobile-alt"></i>
                <h3>One-Click Calling</h3>
                <p>Scan and call directly from any smartphone</p>
            </div>
            <div class="feature">
                <i class="fas fa-shield-alt"></i>
                <h3>No Data Storage</h3>
                <p>Your phone numbers are never stored on our servers</p>
            </div>
        </div>
        
        <div class="footer">
            <p>&copy; 2024 QR Phone Generator | Professional QR Code Solution</p>
        </div>
    </div>

    <script>
        // Update phone prefix when country changes
        document.getElementById('countryCode').addEventListener('change', function() {
            document.getElementById('phonePrefix').textContent = '+' + this.value;
        });
        
        // Form submission with loading state
        document.getElementById('qrForm').addEventListener('submit', function() {
            document.getElementById('loading').style.display = 'block';
            document.getElementById('generateBtn').style.display = 'none';
        });
        
        // Auto-format phone number input
        document.getElementById('phoneNumber').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            e.target.value = value;
        });
        
        // Share functionality
        function shareQRCode() {
            const qrImage = document.getElementById('qrImage');
            const phoneNumber = document.getElementById('displayNumber').textContent;
            
            if (navigator.share) {
                navigator.share({
                    title: 'Phone QR Code',
                    text: `Call me: ${phoneNumber}`,
                    url: qrImage.src
                });
            } else {
                // Fallback - download
                const link = document.createElement('a');
                link.href = qrImage.src;
                link.download = `phone-qr-${phoneNumber.replace(/\D/g, '')}.png`;
                link.click();
            }
        }
        
        // API example usage
        async function generateViaAPI(phoneNumber, countryCode) {
            try {
                const response = await fetch('/api/generate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        phoneNumber: phoneNumber,
                        countryCode: countryCode
                    })
                });
                
                const data = await response.json();
                return data;
            } catch (error) {
                console.error('API Error:', error);
            }
        }
    </script>
</body>
</html>